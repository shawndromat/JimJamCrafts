angular.module('Downloads.directives', [])

  .directive('codeGenerator', function() {
    return {
      controller: 'DownloadCodeFormCtrl',
      restrict: 'E',
      scope: { pattern: '=' },
      templateUrl: "<%= asset_path('downloads/form.html') %>"
    }
  })
  
  .directive('codeTableItem', function() {
    return {
      controller: 'DownloadItemCtrl',
      restrict: 'A',
      scope: { download: '=' },
      templateUrl: "<%= asset_path('downloads/table_item.html') %>"
    }
  })

  .directive('downloadTabs', function() {
    return {
      controller: 'DownloadTabCtrl',
      restrict: 'A',
      scope: { downloadCodes: '=' },
      templateUrl: "<%= asset_path('downloads/tabs.html') %>"
    }
  })
